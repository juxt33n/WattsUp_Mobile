<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.wattsup">

    <!-- Declare permissions if necessary -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.DayNight">

        <!-- MainActivity declaration (LAUNCHER activity) -->
        <activity android:name=".MainActivity"
            android:exported="true"> <!-- Add android:exported attribute here -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainFeatureActivity declaration -->
        <activity android:name=".ui.MainFeatureActivity"
            android:exported="true" /> <!-- Add android:exported attribute here -->

    </application>

</manifest>
